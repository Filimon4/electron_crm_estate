{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "composite": true,
    "jsx": "react",
  },
  "include": ["src/**/*", "src/renderer/**/*.{tsx,ts}", "src/preload/**/*.{tsx,ts}", "src/renderer/pages/**/*", "src/main/**/*", "src/main/auth/**/*", "src/main/db/**/*"]
}
